---
import Section from "./Section.astro";

import { work } from "@cv"

---

<Section title="Experiencia laboral">
    <ul>
        {
            work.map(({name, startDate, endDate, position, summary, highlights}) => {
                const startYear = new Date(startDate).getFullYear()
                const endYear = endDate != null ? new Date(endDate).getFullYear() : "Actualidad"
                const years = `${startYear} - ${endYear}`
                return (
                    <li>
                        <article>
                            <header>
                                <div>
                                    <h3 class="text-lg font-semibold">{name}</h3>
                                    <h4 class="font-semibold text-lg text-slate-600">{position}</h4>
                                </div>

                                <time class="text-slate-700 text-base font-semibold">{years}</time>
                            </header>
                            <footer>
                                <p class="text-slate-700 text-base">{summary}</p>
                            </footer>
                        </article>
                    </li>
                )
            })
        }
    </ul>
</Section>

<style>
    ul {
        display: flex;
        flex-direction: column;
        gap: 32px;
    }

    header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 4px;
    }
</style>