---
import Section from "./Section.astro"

import { projects } from "@cv"
---

<Section title="Proyectos">
    <ul>
        {
            projects.map(({ url, description, highlights, name, isActive }) => {
                return (
                    <li>
                        <article class=" shadow-lg hover:bg-slate-200">
                            <header>
                                <h3 class=" hover:underline"></h3>
                                <a href={url} title={`Ver el proyecto ${name}`} class="font-bold text-lg text-slate-900"> 
                                    {name}
                                 </a>
                                 {
                                    isActive && <span class=" text-green-500">&bull;</span>
                                 }
                                </h3>
                                 <p class="text-base text-slate-700">{description}</p>
                            </header>
                            <footer>
                                    {
                                        highlights.map((highlight) => {
                                            return (
                                                <span class=" rounded-md bg-slate-300 text-slate-700 text-sm px-2">{highlight}</span>
                                            )
                                        })
                                    }
                            </footer>
                        </article>
                    </li>


                )
            })
        }
    </ul>
</Section>

<style>
    ul {
        display: grid;
        grid-template-columns: repeat(
            auto-fit,
            minmax(200px, 1fr)
        );
    }     
    
    article {
        border-radius: 8px;
        border: 1px solid #f2f2f2;
        gap: 16px;
        display: flex;
        flex-direction: column;
        padding: 16px;
        height: 100%;
    }

    article header {
        flex: 1;
    }

    footer {
        display: flex;
        flex-wrap: wrap;
        gap: 4px;
    }
</style>

